@model MongoDbProject.Dtos.ProductDtos.GetByIdProductDto
@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Ürün Güncelleme</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div class="container">
                                <br /><br />
                                <label>Ürün Id</label>
                                <input type="text" asp-for="ProductId" class="form-control" />
                                <br />
                                <label>Ürün Adı</label>
                                <input type="text" asp-for="Name" class="form-control" />
                                <br />
                                <label>Ürün Stok</label>
                                <input type="text" asp-for="Stock" class="form-control" />
                                <br />
                                <label>Ürün Fiyat</label>
                                <input type="text" asp-for="Price" class="form-control" />
                                <br />
                                <label>Ürün Resim</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" />
                                <br />
                                <label>Kategori Seçiniz</label>
                                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Seçiniz...", new { @class = "form-control" })
                                <br />
                                <button type="submit" class="btn btn-primary">Ürünü Güncelle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>