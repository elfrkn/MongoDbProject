@model List<MongoDbProject.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Müşteri Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Müşteri Adı Soyadı </th>
                            <th scope="col">Müşteri Şehir </th>
                            <th scope="col">Müşteri Mail </th>
                            <th scope="col">Müşteri Telefon </th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.CustomerNameSurname
                                </td>
                                 <td>
                                    @item.CustomerCity
                                </td>
                                 <td>
                                    @item.CustomerMail
                                </td>
                                <td>
                                    @item.CustomerPhone
                                </td>


                                <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Customer/CreateCustomer/" class="btn btn-primary">Yeni Müşteri Girişi</a></td>
    </div>
</div>


