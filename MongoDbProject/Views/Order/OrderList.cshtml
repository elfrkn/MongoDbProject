@model List<MongoDbProject.Dtos.OrderDtos.ResultOrderWithCustomerDto>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Sipariş Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün Adı </th>
                            <th scope="col">Ürün Adet </th>
                            <th scope="col">Müşteri Adı</th>
                            <th scope="col">Sipariş Tarihi </th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    @item.OrderProductName
                                </td>
                                <td>
                                    @item.OrderProductPiece
                                </td>
                                <td>
                                    @item.Customer.CustomerNameSurname
                                </td>
                                <td>
                                    @(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))
                                </td>

                                <td><a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Order/CreateOrder/" class="btn btn-primary">Yeni Sipariş Girişi</a></td>
    </div>
</div>


